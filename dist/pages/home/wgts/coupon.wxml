<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="{{'wgt ' + (base.padded ? 'wgt__padded' : null)}}" wx:else>
        <block wx:if="{{base.title}}">
            <view class="wgt__header">
                <view class="wgt__title"><text>{{base.title}}</text>
                    <view class="wgt__subtitle">{{base.subtitle}}</view>
                </view>
                <view class="wgt__more" bindtap="navigateTo" data-e-tap-so="this" data-e-tap-a-a="/pages/home/coupon-home">
                    <view class="three-dot"></view>
                </view>
            </view>
        </block>
        <view class="wgt__body with-padding">
            <view class="{{item.$loopState__temp2}}" wx:key="idx" bindtap="handleGetCard" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="idx" data-e-tap-so="this" data-e-tap-a-a="{{item.$original.id}}">
                <block>
                    <block wx:if="{{item.$original.imgUrl}}">
                        <image src="{{item.$original.imgUrl}}" class="coupon_img" mode="widthFix"></image>
                    </block>
                    <block wx:else>
                        <view class="coupon-body">
                            <view class="coupon__amount"><text>{{item.$original.amount}}</text>
                                <view class="coupon__amount-cur">{{item.$original.type === 'cash' ? '元' : ''}}{{item.$original.type === 'discount' ? '折' : ''}}</view>
                            </view>
                            <view class="coupon-caption">
                                <view class="coupon-content">
                                    <view class="coupon-content__brand-name">{{item.$original.title}}</view>
                                    <view class="coupon-content__coupon-desc">{{item.$original.desc}}</view>
                                </view>
                            </view>
                        </view>
                    </block>
                </block>
                <button class="coupon-btn__getted" bindtap="handleGetCard" data-e-tap-so="this" data-e-tap-a-a="{{item.$original.id}}">领取</button>
            </view>
        </view>
    </view>
</block>