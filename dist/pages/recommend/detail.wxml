<block>
    <block wx:if="{{!info}}">
        <view></view>
    </block>
    <view class="page-recommend-detail" wx:else>
        <view class="recommend-detail__title">最in的5月</view>
        <view class="recommend-detail-info">
            <view class="recommend-detail-info__time"><text class="{{'in-icon in-icon-shijian ' + (info.is_like ? '' : '')}}"></text>2019-5-28</view>
            <view class="recommend-detail-info__time"><text class="{{'in-icon in-icon-xingzhuang ' + (info.is_like ? '' : '')}}"></text>4026关注</view>
        </view>
        <view class="recommend-detail__content">
            <sp-html-content content="电风扇的发热管他人萨芬是" __triggerObserer="{{ _triggerObserer }}"></sp-html-content>
        </view>
        <view class="recommend-detail__bar">
            <view class="recommend-detail__bar-item" bindtap="handleClickBar" data-e-tap-so="this" data-e-tap-a-a="like"><text class="{{'in-icon in-icon-like ' + (info.is_like ? '' : '')}}"></text><text>已赞·380</text>
            </view>
            <view class="recommend-detail__bar-item" bindtap="handleClickBar" data-e-tap-so="this" data-e-tap-a-a="mark"><text class="{{'in-icon in-icon-jiarushoucang ' + (info.is_like ? '' : '')}}"></text><text>加入心愿</text>
            </view>
            <view class="recommend-detail__bar-item" bindtap="handleClickBar" data-e-tap-so="this" data-e-tap-a-a="share"><text class="{{'in-icon in-icon-fenxiang ' + (info.is_like ? '' : '')}}"></text><text>分享</text>
            </view>
        </view>
    </view>
</block>