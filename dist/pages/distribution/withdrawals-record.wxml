<block>
    <view class="page-distribution-record">
        <scroll-view class="record-list__scroll" scroll-y="{{true}}" scroll-top="{{scrollTop}}" bindscrolltolower="nextPage">
            <view class="section list">
                <view class="list-item no-flex" bindtap="handleToggle" wx:for="{{loopArray0}}" wx:for-item="item" wx:for-index="idx" data-e-tap-so="this" data-e-tap-a-a="{{idx}}">
                    <view class="{{item.$loopState__temp2}}">
                        <block wx:if="{{item.$original.status === 'success'}}">
                            <icon type="success" size="20"></icon>
                        </block>
                        <block wx:if="{{item.$original.status === 'apply' || item.$original.status === 'process'}}">
                            <icon type="waiting" size="20"></icon>
                        </block>
                        <block wx:if="{{item.$original.status === 'reject'}}">
                            <icon type="warn" size="20"></icon>
                        </block>
                        <view class="view-flex-item content-h-padded">申请提现 {{item.$original.money / 100}}元</view>
                        <view class="content-right muted">{{item.$original.created_date}}</view>
                    </view>
                    <view class="{{item.$loopState__temp4}}">
                        <block wx:if="{{item.$original.status === 'success'}}">
                            <view class="{{item.$loopState__temp6}}">申请成功</view>
                        </block>
                        <block wx:if="{{item.$original.status === 'apply' || item.$original.status === 'process'}}">
                            <view class="{{item.$loopState__temp8}}">审核中</view>
                        </block>
                        <block wx:if="{{item.$original.status === 'reject'}}">
                            <view class="{{item.$loopState__temp10}}">申请驳回：{{item.$original.remarks}}</view>
                        </block>
                    </view>
                </view>
            </view>
            <block wx:if="{{page.isLoading}}">
                <loading __triggerObserer="{{ _triggerObserer }}">正在加载...</loading>
            </block>
            <block wx:if="{{!page.isLoading && !page.hasNext && !list.length}}">
                <sp-note img="trades_empty.png" __triggerObserer="{{ _triggerObserer }}">暂无数据~</sp-note>
            </block>
        </scroll-view>
    </view>
</block>