<block>
    <view class="page-distribution-shop-form">
        <view class="shop-form">
            <at-form bindonsubmit="handleSubmit" __triggerObserer="{{ _triggerObserer }}" __fn_onSubmit="{{true}}">
                <block wx:if="{{info.key == 'shop_name'}}">
                    <at-input type="text" __triggerObserer="{{ _triggerObserer }}" title="小店名称" value="{{info.val}}" bindonchange="handleChange" __fn_onChange="{{true}}" data-e-onchange-so="this"></at-input>
                </block>
                <block wx:if="{{info.key == 'brief'}}">
                    <at-textarea type="textarea" __triggerObserer="{{ _triggerObserer }}" title="小店描述" value="{{info.val}}" bindonchange="handleChange" __fn_onChange="{{true}}" data-e-onchange-so="this"></at-textarea>
                </block>
                <block wx:if="{{info.key == 'shop_pic'}}">
                    <view class="pic-upload__img"><text class="pic-upload__text">上传店招</text>
                        <view class="pic-upload__imgupload"><text class="pic-upload__imgupload_text">图片建议尺寸：320*100</text>
                            <at-image-picker mode="aspectFill" __triggerObserer="{{ _triggerObserer }}" multiple="{{true}}" length="{{1}}" files="{{imgs}}" bindonchange="handleImageChange" __fn_onChange="{{true}}" data-e-onchange-so="this"></at-image-picker>
                        </view>
                    </view>
                </block>
            </at-form>
        </view>
    </view>
</block>