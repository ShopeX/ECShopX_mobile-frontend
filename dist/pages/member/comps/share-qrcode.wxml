<block>
    <at-curtain closeBtnPosition="top-right" __triggerObserer="{{ _triggerObserer }}" isOpened="{{isOpened}}" bindonclose="handleCloseQrcode" __fn_onClose="{{true}}" data-e-onclose-so="this">
        <view class="qrcode-content">
            <block>
                <block wx:if="{{qrCode}}">
                    <image src="{{'' + qrCode}}" class="qrcode-content__qrimg"></image>
                </block>
                <block wx:else>
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
            </block>
            <view class="qrcode-content__copy" bindtap="handleClickCopy">复制链接</view>
            <sp-toast __triggerObserer="{{ _triggerObserer }}"></sp-toast>
        </view>
    </at-curtain>
</block>