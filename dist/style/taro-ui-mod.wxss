.at-modal__overlay {
  background-color: rgba(0, 0, 0, 0.8);
}
.at-modal__container {
  width: 86%;
}
.at-modal__header:after {
  border: none !important;
}

.at-form {
  padding-left: 0;
  background-color: transparent;
}
.at-form:after {
  border: none !important;
}

.at-input {
  padding: 16rpx 0;
  margin: 0 0 30rpx;
}
.at-input__title {
  font-size: 28rpx;
}
.at-input:after {
  border-color: rgba(196, 0, 0, 0.5);
}
.at-input input {
  font-size: 28rpx;
}

.at-button {
  margin: 0;
}

.at-button--primary {
  font-size: 28rpx;
  -webkit-box-shadow: 0 5rpx 5rpx rgba(94, 0, 0, 0.2);
          box-shadow: 0 5rpx 5rpx rgba(94, 0, 0, 0.2);
}

.at-nav-bar__title {
  font-size: 33rpx;
}

.at-tab-bar__item--active {
  color: #C40000;
}

.at-tab-bar .sp-icon {
  font-size: 44rpx;
}

.at-search-bar__action {
  background-color: transparent;
  color: #333;
}